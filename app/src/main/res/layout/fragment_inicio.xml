<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Vistas.InicioFragment">


    <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:src="@drawable/ic_home"
        android:layout_gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INICIO"
        android:gravity="center"
        android:textSize="40sp"
        android:layout_marginTop="150dp"
        android:layout_gravity="top|center_horizontal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:layout_marginBottom="80dp"
        android:gravity="center">


        <Button
            android:id="@+id/btnAgregarVentilador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Agregar Ventilador"
            android:paddingVertical="15dp"
            android:layout_marginTop="192dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/ic_add"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Empieza a agregar tus primeros ventiladores"
            android:paddingVertical="12dp"
            />

        <Button
            android:id="@+id/btnVerVentiladores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Ventiladores"
            android:paddingVertical="15dp"
            android:layout_marginTop="12dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/ic_eyes"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Ve tu lista de ventiladores agregados."
            android:paddingVertical="15dp"
            />

    </LinearLayout>

</FrameLayout>
